{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "lib": ["es6", "dom", "es2020"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "..",
    "paths": {
      "@react-scrollytelling/*": ["packages/*/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "rollup.config.js",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ],
  "files": ["custom.d.ts"]
}
